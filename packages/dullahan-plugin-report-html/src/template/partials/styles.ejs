<style>
    :root {
        --color-header: <%- colorHeader %>;
        --color-section: <%- colorSection %>;
        --color-failing: <%- colorFailing %>;
        --color-unstable: <%- colorUnstable %>;
        --color-slow: <%- colorSlow %>;
        --color-successful: <%- colorSuccessful %>;

        --color-red: #da002b;
        --color-green: #87be3c;
        --color-grey: #e5e5e5;
        --color-grey-dark: #555555;
    }

    body {
        margin: 0;
        font-family: monospace;
    }

    section {
        padding: 0 1em;
    }

    section.header {
        padding: 1em .5em;
        background: var(--color-header);
    }

    h1,
    h2 {
        color: white;
        text-align: center;
        grid-area: title;
        display: flex;
    }

    h1 span:nth-of-type(1),
    h2 span:nth-of-type(1) {
        margin-left: .5em;
    }

    h1 span:nth-of-type(2),
    h2 span:nth-of-type(2) {
        flex: 1 1 auto;
    }

    h1 {
        font-size: 3rem;
    }

    h2 {
        padding: 1em .5em;
        background: var(--color-section);
        margin: 1em 0 0;
    }

    details:hover summary,
    details[open] summary {
        background: var(--color-grey);
        font-weight: bold;
    }

    details {
        border: 1px solid var(--color-grey);
        border-left: 3px solid;
        margin-bottom: .5em;
    }

    summary {
        cursor: pointer;
        padding: 1em;
        outline: none;
    }

    .section--failing details {
        border-left-color: var(--color-failing);
    }

    .section--failing details[open] summary {
        background: var(--color-failing);
        color: white;
    }

    .section--unstable details {
        border-left-color: var(--color-unstable);
    }

    .section--unstable details[open] summary {
        background: var(--color-unstable);
        color: white;
    }

    .section--slow details {
        border-left-color: var(--color-slow);
    }

    .section--slow details[open] summary {
        background: var(--color-slow);
        color: white;
    }

    .section--successful details {
        border-left-color: var(--color-successful);
    }

    .section--successful details[open] summary {
        background: var(--color-successful);
        color: white;
    }

    img {
        max-width: 100%;
    }

    .step {
        padding: .5em 1em;
        display: flex;
        flex-flow: column;
        border-bottom: 1px solid var(--color-grey);
    }

    .step.step--spacer {
        background-color: var(--color-grey);
    }

    .step .step--row {
        display: flex;
        flex-flow: row wrap;
    }

    .step--output {
        color: white;
        background-color: var(--color-grey-dark);
        margin: 1em 0 1em 1.5em;
        padding: 1em;
    }

    .step--icon {
        margin-right: 1em;
        color: var(--color-green);
    }

    .step--message {
        flex: 1;
        overflow: hidden;
        text-overflow: ellipsis;
    }

    .step.step--error .step--icon,
    .step.step--error .step--message {
        color: var(--color-red);
        font-weight: bold;
    }

    .screenshot {
        padding: 1em;
    }

    .screenshot img {
        width: 100%;
        border: 1px solid var(--color-grey);
    }

    @media all and (max-width: 768px) {
        h1 {
            font-size: 2rem;
            margin: 0;
        }

        h2 {
            padding: .5em;
        }

        section.configuration {
            grid-row-gap: 1em;
            grid-template-areas: "title title title" "system system system" "filter filter filter" "plugins plugins plugins";
        }
    }
</style>
